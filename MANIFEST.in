# Include important documentation
include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include all configuration files
recursive-include lobster *.json
recursive-include lobster *.yaml
recursive-include lobster *.yml

# Include type stubs if any
recursive-include lobster *.pyi
recursive-include lobster py.typed

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*

# Exclude test and development files
prune tests
prune docs
prune .github
prune scripts
exclude .pre-commit-config.yaml
exclude .readthedocs.yaml
exclude docker-compose.yml
exclude Dockerfile*
exclude Makefile
exclude pytest.ini
exclude .coveragerc
exclude .gitignore
